# Web app (Next.js)
WEB_PORT=3001
WEB_URL=http://localhost:3001

# API server (Elysia)
SERVER_PORT=3000

# Database (Supabase PostgreSQL via connection pooler)
DATABASE_URL=postgresql://postgres.xxx:password@aws-1-xx-x.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection (for Prisma migrations/db push)
DIRECT_URL=postgresql://postgres.xxx:password@aws-1-xx-x.pooler.supabase.com:5432/postgres

# Auth (better-auth)
BETTER_AUTH_SECRET=  # generate with: openssl rand -base64 32
BETTER_AUTH_URL=http://localhost:3000

# Auth client base URL (used by frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
